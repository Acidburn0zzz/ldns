#!/bin/sh
VERSION="@PACKAGE_VERSION@"
CFLAGS="@CFLAGS@"
LDFLAGS="@LDFLAGS@"
LIBS="@LIBS@"
LIBDIR="@libdir@"

for arg in $@
do
    if [ $arg = "--cflags" ]
    then
        echo "${CFLAGS}"
    fi
    if [ $arg = "--libs" ]
    then
        echo "${LDFLAGS} -L${LIBDIR} ${LIBS} -lldns"
    fi
    if [ $arg = "-h" ] || [ $arg = "--help" ]
    then
        echo "Usage: $0 [--cflags] [--libs] [--version]"
    fi
    if [ $arg = "--version" ]
    then
        echo "${VERSION}"
    fi
done
