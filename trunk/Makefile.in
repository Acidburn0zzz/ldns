# Standard installation pathnames
# See the file LICENSE for the license
SHELL 		= @SHELL@
srcdir 		= @srcdir@
prefix  	= @prefix@
exec_prefix 	= @exec_prefix@
bindir 		= @bindir@
mandir 		= @mandir@

CC 		= @CC@
CPPFLAGS	= @CPPFLAGS@ @DEFS@ -I. -I$(srcdir)
CFLAGS 		= @CFLAGS@
LDFLAGS		= @LDFLAGS@
LIBS 		= @LIBS@

LINT		= splint
LINTFLAGS	= +quiet +posixlib -weak -warnposix -unrecog

#INSTALL = $(srcdir)/install-sh -c
#INSTALL_PROGRAM = $(INSTALL)

LIBDNS_SOURCES	=	rdata.c util.c rr.c packet.c
LIBDNS_HEADERS	=	ldns/error.h		\
			ldns/packet.h		\
			ldns/prototype.h 	\
			ldns/rdata.h 		\
			ldns/rr.h		\
			util.h			\
			buf.h
LIBDNS_OBJECTS	=	$(LIBDNS_SOURCES:.c=.o)

ALL_SOURCES	=	run-test0.c $(LIBDNS_SOURCES)

COMPILE		= $(CC) $(CPPFLAGS) $(CFLAGS)
LINK		= $(CC) $(CFLAGS) $(LDFLAGS)

%.o:	$(srcdir)/%.c
	$(COMPILE) -c $<

.PHONY:	clean realclean docclean doc lint

all:	run-test0

run-test0:	run-test0.o $(LIBDNS_OBJECTS)
		$(LINK) -o $@ $+

doc:	
	doxygen libdns.doxygen

clean:	
	rm -f *.o *.d
	rm -f run-test0
	rm -rf autom4te.cache/
	rm -f aclocal.m4

realclean: clean docclean
	rm -f config.status
	rm -f config.log
	rm -f Makefile
	rm -f config.h
	rm -f config.h.in
	rm -f configure

docclean:
	rm -rf doc

lint:
	for i in $(ALL_SOURCES); do \
		$(LINT) $(LINTFLAGS) -I. -I$(srcdir) $(srcdir)/$$i ; \
	done

# Automatic dependencies.
%.d: $(srcdir)/%.c
	$(SHELL) -ec '$(CC) -MM $(CPPFLAGS) $< \
	              | sed '\''s!\(.*\)\.o[ :]*!$(dir $@)\1.o $@ : !g'\'' > $@; \
	              [ -s $@ ] || rm -f $@'

include $(ALL_SOURCES:.c=.d)
